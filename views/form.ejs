<%-include("partials/header")-%>
<%-include("partials/topnav")-%>
<%-include("partials/sidenav")-%>

<!-- Page content start -->

<script type="text/javascript">
    $(document).ready(function () {
        $('input[name="listOwner"]').click(function () {
            var val = $(this).attr("value");
            var target = $("." + val);
            $(".hideForm").not(target).hide();
            $(target).show();
        });
    });
</script>

<main class="mt-4 mb-5">
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center">
            <div class="col-xl-11 col-lg-11 col-md-12 col-sm-12">
                <!-- //////////////////////////////////////// -->
                <div class="text-center pb-4">
                    <h3>Add Contact Data File</h3>
                </div>
                <!-- Create contact collection form start -->
                <div class="row justify-content-center">
                    <div class="col-xl-7 col-lg-9 col-md-11 col-sm-12">
                        <form action="/" method="POST" enctype="multipart/form-data">
                            
                            <hr>
                            <div class="hideForm ifClient">
                                <div class="mb-3 d-flex align-items-center flex-wrap">
                                    <label class="form-check-label pe-3 text-primary" for="selectClient">Select Client: *</label>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="client" id="findem" value="Findem">
                                        <label class="form-check-label" for="findem">Findem</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="client" id="proxyAnalytics" value="Proxy Analytics">
                                        <label class="form-check-label" for="proxyAnalytics">Proxy Analytics</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="client" id="traackr" value="Traackr">
                                        <label class="form-check-label" for="traackr">Traackr</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="client" id="WG_LDP" value="WG-LDP">
                                        <label class="form-check-label" for="WG_LDP">WG-LDP</label>
                                    </div>
                                </div>
                                <hr>
                            </div>
                            <div class="row mb-3">
                                <div class="col">
                                    <label class="form-label" for="listTitle">Document Title *</label>
                                    <input type="text" class="form-control" id="listTitle" name="listTitle" required>
                                </div>
                                <div class="col">
                                    <label class="form-label" for="contactFile">Add CSV file *</label>
                                    <input type="file" class="form-control" id="contactFile" name="csvfile" required>
                                </div>
                            </div>
                            <div class="row mb-3">
                                
                                <div class="col">
                                    <label class="form-label" for="clientApproval">Client Approval</label>
                                    <select class="select form-control" name="clientApproval">
                                        <option value="Yes">Yes</option>
                                        <option value="No">No</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col">
                                    <label class="form-label" for="filterTags">Filter Tags *</label>
                                    <input type="text" class="form-control" id="filterTags" name="filterTags" placeholder="New York, Clinical Trials, CliniOps, Large Cap" required>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col">
                                    <label class="form-label" for="fileNote">Note *</label>
                                    <textarea class="form-control" id="fileNote" name="fileNote" rows="4" placeholder="Document by CLiniOps for Large Cap companies doing clinical trials in California" required></textarea>
                                </div>
                            </div>
                            <div class="row mb-3 pt-2">
                                <div class="col">
                                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                                </div>
                                <div class="col">
                                    <button type="reset" class="btn btn-danger btn-block">Reset</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- Create contact collection form end -->
                <!-- //////////////////////////////////////// -->
            </div>
        </div>
    </div>
</main>
<!-- Page content end -->

<%-include("partials/footer")-%>